<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Activity.SettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/productsansregular"
            android:text="General"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvGeneral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGeneral">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/ibProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/productsansregular"
                    android:padding="@dimen/dp_15"
                    android:src="@drawable/ic_profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="Profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibProfile"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="Manage Profile"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibProfile"
                    app:layout_constraintTop_toBottomOf="@id/tvProfile" />

                <ImageButton
                    android:id="@+id/ibFavorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/productsansregular"
                    android:padding="@dimen/dp_15"
                    android:src="@drawable/ic_favorite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ibProfile" />

                <TextView
                    android:id="@+id/tvFavorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="Favourites"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibProfile"
                    app:layout_constraintTop_toBottomOf="@+id/ibProfile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="Manage Frequest Socities"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibFavorites"
                    app:layout_constraintTop_toBottomOf="@id/tvFavorites" />

                <ImageButton
                    android:id="@+id/ibPreferences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/dp_15"
                    android:src="@drawable/ic_pref"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ibFavorites" />

                <TextView
                    android:id="@+id/tvPreferences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="Prefrences"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibProfile"
                    app:layout_constraintTop_toBottomOf="@+id/ibFavorites" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="Manage App Prefrences"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibProfile"
                    app:layout_constraintTop_toBottomOf="@id/tvPreferences" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAppLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ibPreferences">

                    <ImageButton
                        android:id="@+id/ibLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/dp_15"
                        android:src="@drawable/ic_lang"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:fontFamily="@font/productsansregular"
                        android:text="App Language"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintStart_toEndOf="@id/ibLanguage"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvLanguageChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:fontFamily="@font/productsansregular"
                        android:text="English"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintStart_toEndOf="@id/ibLanguage"
                        app:layout_constraintTop_toBottomOf="@id/tvLanguage" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <ImageButton
                    android:id="@+id/ibAppShortcuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/productsansregular"
                    android:padding="@dimen/dp_15"
                    android:src="@drawable/redo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clAppLanguage" />

                <TextView
                    android:id="@+id/tvAppShortcuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="Share"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibAppShortcuts"
                    app:layout_constraintTop_toBottomOf="@+id/clAppLanguage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="Share App with Customer"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibAppShortcuts"
                    app:layout_constraintTop_toBottomOf="@id/tvAppShortcuts" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvOthers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/productsansregular"
            android:text="Other"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvGeneral" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvOthers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOthers">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/ibAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/productsansregular"
                    android:padding="@dimen/dp_15"
                    android:src="@drawable/ic_about"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="About"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibAbout"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="Current Version 1.0.0"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibAbout"
                    app:layout_constraintTop_toBottomOf="@id/tvAbout" />

                <ImageButton
                    android:id="@+id/ibSubscribeToBeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/productsansregular"
                    android:padding="@dimen/dp_15"
                    android:src="@drawable/beta"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ibAbout" />

                <TextView
                    android:id="@+id/tvSubscribeToBeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="Subscribe to Bets"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibAbout"
                    app:layout_constraintTop_toBottomOf="@+id/ibAbout" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="Currently not Subscribed"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibAbout"
                    app:layout_constraintTop_toBottomOf="@id/tvSubscribeToBeta" />

                <ImageButton
                    android:id="@+id/ibLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/productsansregular"
                    android:padding="15dp"
                    android:src="@drawable/ic_logout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ibSubscribeToBeta" />

                <TextView
                    android:id="@+id/tvOPDTreatment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/productsansregular"
                    android:text="Logout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibAbout"
                    app:layout_constraintTop_toBottomOf="@+id/ibSubscribeToBeta" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>